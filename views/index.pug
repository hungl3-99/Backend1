extends layout.pug

block content
 h1 Hello 
 a.btn.btn-primary(href="/users/create") New
 form(action="/users/search" , method="GET" class="d-flex") 
  input(type="text" , name="q" ,class="form-control")
  button(class="ml-2 btn btn-primary") Search

 table.table
  tr
   th Name
   th Phone
  each user in users
   tr
    td= user.name
    td= user.phone
    td
     a(href="/users/" + user.id) view